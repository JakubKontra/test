{
    "version": 2,
    "env": {},
    "builds": [
      { "src": "packages/api/src/index.js", "use": "@vercel/node" },
      {
        "src": "packages/app/package.json",
        "use": "@vercel/static-build",
        "config": { "distDir": "build" }
      }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "api/src/index.js" },
      
      {
        "src": "/",
        "dest": "packages/app/.next/index.html"
      },
      {
        "src": "/(.+)",
        "dest": "packages/app/.next/$1"
      }
    ]
  }
